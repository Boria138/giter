PROGDIR=$(dirname $0)
[ "$PROGDIR" = "." ] && PROGDIR=$(pwd)

. $PROGDIR/giter-common-functions


# Do gear-commit -a

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
	echo "gammit - do fast git commit amend (apply all current changes to the last commit)"
	echo "Use: gammit [-e] [file]"
	echo "     -e - edit commit message"
	exit 0
fi

ARG=

# If no args, commit all changed files
if [ -z "$1" ] ; then
	ARG="$ARG -a"
fi

docmd gear-commit $ARG $@
