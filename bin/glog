PROGDIR=$(dirname $0)
[ "$PROGDIR" = "." ] && PROGDIR=$(pwd)

. $PROGDIR/giter-common-functions


# Do git rebase -i

if [ "$1" = "-h" ] || [ "$1" = "--help" ]; then
	echo "glog - git log"
	echo "Use: glog"
	exit 0
fi

docmd git log --pretty=oneline --abbrev-commit --graph --decorate --all
